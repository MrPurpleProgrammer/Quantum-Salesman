{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "quantum-salesman"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "quantum-salesman",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Watch",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Build",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "prod"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Server_Node",
            "type": "node",
            "request": "launch",
            "address": "localhost",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "program": "${workspaceFolder}\\server\\node\\index.js",
            "cwd": "${workspaceFolder}\\server\\node",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Server_Flask",
            "type": "node",
            "request": "launch",
            "address": "localhost",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "program": "${workspaceFolder}\\server\\node\\index.js",
            "cwd": "${workspaceFolder}\\server\\node",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ],
    "compounds": [
        {
            "name": "Production",
            "configurations": [
                "Build",
                "Server"
            ],
        },
        {
            "name": "Development",
            "configurations": [
                "Watch",
                "Server"
            ],
        }
    ],
}